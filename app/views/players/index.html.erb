<h1>Players</h1>

<%= form_tag(players_path, method: :get, class: 'search-form') do %>
  <%= text_field_tag(:search, params[:search], placeholder: 'Search by name') %>

  <%= select_tag(:position, options_for_select(Player.distinct.pluck(:position), params[:position]), include_blank: 'Select a position') %>

  <%= submit_tag('Search', class: 'btn btn-primary') %>
<% end %>

<ul>
  <% @players.each do |player| %>
    <li>
      <%= link_to "#{player.first_name} #{player.last_name}", player_path(player) %>
    </li>
  <% end %>
</ul>

<%= will_paginate @players %>
