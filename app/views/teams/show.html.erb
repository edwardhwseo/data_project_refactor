<%= link_to('See all teams', { controller: 'teams', action: 'index' }) %>
<div class="container text-center">
<h1><%= @team.name %></h1>
<div class="row">
<ul class="list-inline">
<div class="col">
  <li class="list-inline-item"><%= @team.city %></li>
  </div>
  <div class="col">
  <li class="list-inline-item"><%= @team.abbreviation %></li>
   </div>
</ul>
</div>
<h2>Division: <%= link_to @team.division.name, @team.division %></h2>

<%= form_tag(team_path(@team), method: :get, class: 'search-form') do %>
  <%= text_field_tag(:search, params[:search], placeholder: 'Search players by name') %>
  <%= submit_tag('Search', class: 'btn btn-primary') %>
<% end %>

<h3><%= @team.name %> Players</h3>
<ul class="list-inline">
 <div class="row g-5">
  <% @players.each do |player| %>
  <div class="col-lg-4">
    <li class="list-inline-item"><%= link_to "#{player.first_name} #{player.last_name}", player %></li>
  </div>
  <% end %>
</ul>

<%= will_paginate @players %>
